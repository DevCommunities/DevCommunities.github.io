---
import React from "react";
import { ViewTransitions } from "astro:transitions";
import DarkModelToggle from "~/components/button/DarkmodeToggle.astro";
import NavContainer from "~/components/global/nav/NavComponents";
import { NavListContainer } from "~/components/global/nav/NavComponents";
---

<style is:global>
  @font-face {
    font-family: "LINESeedSansTH";
    src: url("/fonts/LINESeedSansTH_W_Rg.woff") format("woff");
    font-weight: normal;
    font-style: normal;
  }

  @font-face {
    font-family: "LINESeedSansTHXB";
    src: url("/fonts/LINESeedSansTH_W_XBd.woff") format("woff");
    font-weight: normal;
    font-style: normal;
  }
</style>
<NavContainer>
  <NavListContainer pathName={Astro.url.pathname} client:load>
    <DarkModelToggle client:load />
  </NavListContainer>
</NavContainer>
<ViewTransitions />
